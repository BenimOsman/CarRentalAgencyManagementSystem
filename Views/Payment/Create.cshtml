@model CarRentalAgencyMngSystem.Models.Payment

@{
    ViewData["Title"] = "Create Payment";
}

<h1>Create Payment</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Rental Dropdown -->
            <div class="form-group">
                <label asp-for="RentalId" class="control-label"></label>
                <select asp-for="RentalId" class="form-control" id="rentalSelect" asp-items="ViewBag.Rentals">
                    <option value="">-- Select Rental --</option>
                </select>
                <span asp-validation-for="RentalId" class="text-danger"></span>
            </div>

           

            <!-- Payment Date -->
            <div class="form-group">
                <label asp-for="PaymentDate" class="control-label"></label>
                <input asp-for="PaymentDate" class="form-control" type="date" />
                <span asp-validation-for="PaymentDate" class="text-danger"></span>
            </div>

            <!-- Payment Method -->
            <div class="form-group">
                <label asp-for="Method" class="control-label"></label>
                <select asp-for="Method" class="form-control">
                    <option value="">-- Select Payment Method --</option>
                    @foreach (var method in Enum.GetValues(typeof(CarRentalAgencyMngSystem.Models.PaymentMethod)))
                    {
                        <option value="@method">@method</option>
                    }
                </select>
                <span asp-validation-for="Method" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div
}