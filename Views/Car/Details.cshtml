@model CarRentalAgencyMngSystem.Models.Car

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Car</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Make)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Make)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LicensePlate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LicensePlate)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DailyRate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DailyRate)
            <br />
            <small>Estimated cost for 3 days: @String.Format("{0:C}", Model.DailyRate * 3)</small>
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsAvailable)
        </dt>
        <dd class="col-sm-10">
            <input type="checkbox" @(Model.IsAvailable ? "checked" : "")
                   onclick="showAvailability('@Model.Make', @Model.IsAvailable)" />
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.CarId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<script>
    function showAvailability(carName, isAvailable) {
        let status = isAvailable ? "Available" : "Not Available";
        alert(carName + " is " + status); // Dialog box shows availability
    }
</script>