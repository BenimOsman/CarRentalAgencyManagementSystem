@{
    ViewData["Title"] = "Home Page";
}

<style>
    /* Full-page wrapper */
    .home-wrapper {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        text-align: center;
        font-family: Arial, sans-serif;
    }

    /* Header section */
    .home-header {
        margin-top: 50px;
    }

    .home-header h1 {
        display: inline-block; /* Keep in one line if short */
        font-size: 2.5rem;
        font-weight: bold;
        color: #0d6efd; /* Bootstrap primary color */
    }

    .home-header p {
        color: #6c757d; /* Bootstrap secondary text */
        font-size: 1.2rem;
        margin-top: 10px;
    }

    /* Cards container */
    .home-cards {
        display: flex;
        justify-content: center;
        gap: 20px;
        flex-wrap: wrap;
        margin-top: 50px;
        padding: 0 20px;
    }

    .home-card {
        flex: 0 0 250px;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        padding: 20px;
        background-color: #fff;
        text-align: center;
    }

    .home-card h5 {
        font-size: 1.2rem;
        margin-bottom: 10px;
    }

    .home-card p {
        font-size: 0.95rem;
        margin-bottom: 15px;
        color: #495057;
    }

    .home-card a {
        text-decoration: none;
        padding: 5px 10px;
        border-radius: 5px;
        font-size: 0.9rem;
    }

    .btn-primary { background-color: #0d6efd; color: #fff; }
    .btn-success { background-color: #198754; color: #fff; }
    .btn-warning { background-color: #ffc107; color: #212529; }
    .btn-danger  { background-color: #dc3545; color: #fff; }

    /* Footer at bottom */
    .home-footer {
        margin-top: auto;
        padding: 20px 0;
        color: #6c757d;
    }
</style>

<div class="home-wrapper">

    <!-- Header -->
    <div class="home-header">
        <h1>Welcome to Car Rental Agency Management System</h1><br>
        <p>Your trusted platform for booking and managing rental cars with ease.</p><br><br>
    </div>

    <!-- Cards Section -->
    <div class="home-cards">
        <div class="home-card">
            <h5>🚗 Cars</h5>
            <p>Browse available cars, check details, and manage your fleet efficiently.</p>
            <a asp-controller="Car" asp-action="Index" class="btn-primary">View Cars</a>
        </div>
        <div class="home-card">
            <h5>👥 Customers</h5>
            <p>Manage customer records and maintain rental history seamlessly.</p>
            <a asp-controller="Customer" asp-action="Index" class="btn-success">View Customers</a>
        </div>
        <div class="home-card">
            <h5>📑 Rentals</h5>
            <p>Track and manage all active and completed rentals in one place.</p>
            <a asp-controller="Rental" asp-action="Index" class="btn-warning">View Rentals</a>
        </div>
        <div class="home-card">
            <h5>💳 Payments</h5>
            <p>Process and track payments with secure and reliable records.</p>
            <a asp-controller="Payment" asp-action="Index" class="btn-danger">View Payments</a>
        </div>
    </div>

    <!-- Footer -->
    <div class="home-footer">
        © 2025 CarRentalAgencyManagementSystem. All rights reserved.
    </div>

</div>