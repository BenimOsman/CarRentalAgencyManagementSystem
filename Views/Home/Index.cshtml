@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mt-5">
    <h1 class="display-4 fw-bold text-primary">Welcome to Car Rental Agency Management System</h1>
    <p class="lead text-secondary">Your trusted platform for booking and managing rental cars with ease.</p>

    <div class="row mt-5">
        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body">
                    <h5 class="card-title">🚗 Cars</h5>
                    <p class="card-text">Browse available cars, check details, and manage your fleet efficiently.</p>
                    <a asp-controller="Car" asp-action="Index" class="btn btn-primary btn-sm">View Cars</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body">
                    <h5 class="card-title">👥 Customers</h5>
                    <p class="card-text">Manage customer records and maintain rental history seamlessly.</p>
                    <a asp-controller="Customer" asp-action="Index" class="btn btn-success btn-sm">View Customers</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body">
                    <h5 class="card-title">📑 Rentals</h5>
                    <p class="card-text">Track and manage all active and completed rentals in one place.</p>
                    <a asp-controller="Rental" asp-action="Index" class="btn btn-warning btn-sm">View Rentals</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body">
                    <h5 class="card-title">💳 Payments</h5>
                    <p class="card-text">Process and track payments with secure and reliable records.</p>
                    <a asp-controller="Payment" asp-action="Index" class="btn btn-danger btn-sm">View Payments</a>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-5">
        <p class="text-muted">© 2025 CarRentalAgencyMngSystem. All rights reserved.</p>
    </div>
</div>